<%- include('partials/header') %>

<main class="about-page">
  <section
    class="page-hero"
    style="background-image: url('/images/about-hero.jpg')"
  >
    <div class="page-hero-content">
      <h1>Our Story</h1>
      <p>
        We are a family-run flower farm & seed company specializing in breeding
        new cut flower varieties.
      </p>
    </div>
  </section>

  <section class="about-content">
    <div class="container">
      <div class="about-mission">
        <h2>Our Mission</h2>
        <p>
          To cultivate beauty and share it with the world. We are dedicated to
          giving flower lovers the tools and information they need to grow the
          gardens of their dreams. Our thriving research and education farm is
          set in Washington's beautiful Skagit Valley, with fields bursting with
          flowers that reflect the season.
        </p>
      </div>

      <div class="about-image-gallery">
        <img src="/images/about-gallery-1.jpg" alt="Flower field" />
        <img src="/images/about-gallery-2.jpg" alt="Close up of flowers" />
      </div>

      <div class="team-section">
        <h2>Meet the Team</h2>
        <div class="team-members">
          <div class="team-member">
            <img src="/images/team-1.jpg" alt="Team member 1" />
            <h3>Erin Benzakein</h3>
            <p>Founder & Creative Director</p>
          </div>
          <div class="team-member">
            <img src="/images/team-2.jpg" alt="Team member 2" />
            <h3>Chris Benzakein</h3>
            <p>Farm Manager & Operations</p>
          </div>
          <div class="team-member">
            <img src="/images/team-3.jpg" alt="Team member 3" />
            <h3>Jill Jorgensen</h3>
            <p>Director of Education</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>

<%- include('partials/footer') %>
